local honeyUI = playerGui:WaitForChild("HoneyEventShop_UI")
local honeyVisible = false

honeyShopBtn.MouseButton1Click:Connect(function()
	honeyVisible = not honeyVisible
	honeyUI.Enabled = honeyVisible

	if honeyVisible then
		honeyShopBtn.Text = "Cerrar Honey Shop ‚ùå"
	else
		honeyShopBtn.Text = "Honey Shop üçØ"
	end
end)

-- Mostrar/ocultar men√∫
local visible = false
menuBtn.MouseButton1Click:Connect(function()
	visible = not visible
	menu1.Visible = visible
	menu2.Visible = visible
end)
